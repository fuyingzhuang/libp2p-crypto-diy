{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.
{covertool, [{coverdata_files,
              [
               "ct.coverdata",
               "eunit.coverdata"
              ]}]
}.

{deps, [
        {ecc_compact, "1.0.4"},
        {enacl, "0.17.2"},
        {erl_base58, "0.0.1"},
        {multiaddr, "1.1.3"}
       ]}.

{erl_opts, [
            warn_untyped_records,
            debug_info,
            warnings_as_errors
           ]}.

{plugins, [covertool]}.

{shell, [{apps, [libp2p_crypto]}]}.

{dialyzer, [
    {warnings, [unknown]},
    {plt_apps,all_deps}
]}.

{xref_checks,[
    undefined_function_calls,
    undefined_functions, %locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.


{profiles,
 [
  {test, [
          {erl_opts, [nowarn_export_all, export_all]},
          {deps,
           [
            cth_readable,
            meck
           ]}
         ]}
 ]}.

